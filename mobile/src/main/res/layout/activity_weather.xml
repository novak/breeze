<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_current_conditions"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="org.novak.breeze.ui.WeatherActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/Widget.Breeze.Toolbar"
        app:popupTheme="@style/Widget.Breeze.Popup" />

    <FrameLayout
        android:id="@+id/frame_current_conditions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/frame_forecast"
        android:layout_width="match_parent"
        android:layout_height="@dimen/forecast_container_height"
        android:background="@color/background_forecast" />

</LinearLayout>
